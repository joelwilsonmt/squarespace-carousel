import React, { useState, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';

const CAROUSEL_IMG_1_URL = 'CAROUSEL_IMG_1_URL'; // Placeholder
const CAROUSEL_IMG_2_URL = 'CAROUSEL_IMG_2_URL'; // Placeholder

const images = [CAROUSEL_IMG_1_URL, CAROUSEL_IMG_2_URL];
// For local testing: 
// const images = ['./uploaded_media_0_1769659641542.jpg', './uploaded_media_1_1769659641542.jpg', './uploaded_media_2_1769659641542.jpg'];

export const Carousel: React.FC = () => {
  const [currentIndex, setCurrentIndex] = useState(0);

  useEffect(() => {
    const timer = setInterval(() => {
      setCurrentIndex((prev) => (prev + 1) % images.length);
    }, 5000);
    return () => clearInterval(timer);
  }, []);

  return (
    <div className="efm-relative efm-w-full efm-h-[500px] efm-overflow-hidden efm-bg-background">
      <AnimatePresence initial={false}>
        <motion.div
          key={currentIndex}
          className="efm-absolute efm-inset-0 efm-w-full efm-h-full"
          initial={{ opacity: 0, scale: 1 }}
          animate={{ opacity: 1, scale: 1.05 }}
          exit={{ opacity: 0 }}
          transition={{
            opacity: { duration: 1.5, ease: "easeInOut" },
            scale: { duration: 5, ease: "linear" }
          }}
        >
          <img
            src={images[currentIndex]}
            alt={`Slide ${currentIndex + 1}`}
            loading="lazy"
            className="efm-w-full efm-h-full efm-object-cover"
          />
        </motion.div>
      </AnimatePresence>
    </div>
  );
};
